{
    "name": "mileschou/phalog",
    "description": "Static HTML generator",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "template"
    ],
    "authors": [
        {
            "name": "MilesChou",
            "email": "jangconan@gmail.com",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": ">=7.2",
        "graham-campbell/markdown": "^11.2",
        "illuminate/view": "^6",
        "league/commonmark-extras": "^1.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.11.8",
        "phpunit/phpunit": "^7 | ^8",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "MilesChou\\Phalog\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
